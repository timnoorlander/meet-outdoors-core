generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email    String    @unique
  password String

  firstName String?
  lastName  String?
  occupation String?

  actvities Activity[]

  @@map("users")
}

model Activity {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title         String
  category      String
  description   String?
  location      String
  startTime     DateTime
  duration      Int

  address  String
  city     String
  country  String
  postcode String
  longitude Int
  latitude Int

  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@map("activities")
}